<h1>Dashboard</h1>

<%= form_for @cluck do |form| %>
  <%= form.fields_for :content do |content_form| %>
    <%= content_form.text_field :body, placeholder: "Cluck here", required: true %>
  <% end %>
  <%= form.submit "Cluck!" %>
<% end %>

<!--- polymorphic rendering based on @clucks -->
<%= render @clucks %>

